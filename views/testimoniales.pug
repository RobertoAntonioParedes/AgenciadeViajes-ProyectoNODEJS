extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
        include ./layout/bloque_testimoniales.pug
        .row 
            .col-md-12 
                h2.d-block.text-center.w-100 Agrega un testimonio

                if(errores)
                    each error in errores
                        .alert.alert-danger.col.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Ingrese sus nombres", name="nombre", class="form-control", value= nombre)
                        .form-group 
                            label(for="correo") Correo electr√≥nico
                            input#email(type="email", placeholder="Ingrese sus email", name="correo", class="form-control", value= correo)
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(class="form-control", placeholder="Escribe tu mensaje", name="mensaje", cols="30", rows="10")= mensaje
                        input.btn.btn-success.btn-block(type="submit")
